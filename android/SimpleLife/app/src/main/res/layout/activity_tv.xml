<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.simplelife.TVActivity"
    android:background="#ff39affe">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtnBack_tv"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00000000" />

    <ImageButton
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:id="@+id/ibtnCircle_tv"
        android:layout_alignTop="@+id/ibtnBack_tv"
        android:layout_toRightOf="@+id/ibtnBack_tv"
        android:layout_toEndOf="@+id/ibtnBack_tv"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/circle_tv"
        android:scaleType="fitCenter"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textName_tv"
        android:layout_below="@+id/ibtnCircle_tv"
        android:layout_alignLeft="@+id/ibtnCircle_tv"
        android:layout_alignStart="@+id/ibtnCircle_tv"
        android:layout_marginTop="5dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textContent_tv"
        android:layout_alignTop="@+id/ibtnCircle_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/ibtnCircle_tv"
        android:layout_alignBottom="@+id/textName_tv"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/ibtnCircle_tv"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLine_tv"
        android:src="@drawable/line"
        android:layout_below="@+id/textName_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/textName_tv"
        android:layout_below="@+id/imageLine_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:id="@+id/ibtnUp_menu_tv"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/icon_up_white"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:background="#00000000" />

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:id="@+id/ibtnVolumeUp"
            android:layout_row="1"
            android:layout_column="3"
            android:src="@drawable/icon_volumeup_white"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:id="@+id/ibtnDown_menu_tv"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/icon_down_white"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:background="#00000000" />

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:id="@+id/ibtnVolumeDown"
            android:layout_row="2"
            android:layout_column="3"
            android:src="@drawable/icon_volumedown_white"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:background="#00000000" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/number_1"
            android:id="@+id/btn1"
            android:layout_row="3"
            android:layout_column="0"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:background="@drawable/other_icon"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:id="@+id/ibtnMenu_tv"
            android:layout_row="0"
            android:layout_column="3"
            android:src="@drawable/icon_menu_white"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:background="#00000000" />

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:id="@+id/ibtnLeft_menu_tv"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/icon_left_white"
            android:scaleType="fitCenter"
            android:layout_gravity="right"
            android:background="#00000000"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:text="@string/number_ok"
            android:id="@+id/btnOK_tv"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/other_icon"
            android:textColor="#ffffffff"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:id="@+id/ibtnRight_menu_tv"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/icon_right_white"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:background="#00000000"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/number_2"
            android:id="@+id/btn2"
            android:layout_row="3"
            android:layout_column="1"
            android:textColor="#ffffffff"
            android:singleLine="true"
            android:background="@drawable/other_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/number_3"
            android:id="@+id/btn3"
            android:layout_row="3"
            android:layout_column="2"
            android:textColor="#ffffffff"
            android:singleLine="true"
            android:background="@drawable/other_icon"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:id="@+id/ibtnMute"
            android:layout_row="3"
            android:layout_column="3"
            android:src="@drawable/icon_mute_white"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/number_4"
            android:id="@+id/btn4"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:singleLine="true"
            android:background="@drawable/other_icon"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/number_5"
            android:id="@+id/btn5"
            android:layout_row="4"
            android:layout_column="1"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:background="@drawable/other_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/number_6"
            android:id="@+id/btn6"
            android:layout_row="4"
            android:layout_column="2"
            android:textColor="#ffffffff"
            android:singleLine="true"
            android:background="@drawable/other_icon"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:id="@+id/ibtnUp_tv"
            android:layout_row="4"
            android:layout_column="3"
            android:src="@drawable/icon_up_white"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/number_7"
            android:id="@+id/btn7"
            android:layout_row="5"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:singleLine="true"
            android:background="@drawable/other_icon" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/number_8"
            android:id="@+id/btn8"
            android:layout_row="5"
            android:layout_column="1"
            android:textColor="#ffffffff"
            android:singleLine="true"
            android:background="@drawable/other_icon"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/number_9"
            android:id="@+id/btn9"
            android:layout_row="5"
            android:layout_column="2"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:background="@drawable/other_icon" />

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:id="@+id/ibtnDown_tv"
            android:layout_row="5"
            android:layout_column="3"
            android:src="@drawable/icon_down_white"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/number_0"
            android:id="@+id/btn0"
            android:layout_row="6"
            android:layout_column="1"
            android:textColor="#ffffffff"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/other_icon" />

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:id="@+id/ibtnReturn_tv"
            android:layout_row="6"
            android:layout_column="3"
            android:src="@drawable/icon_return_white"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginTop="5dp" />

    </GridLayout>

</RelativeLayout>
