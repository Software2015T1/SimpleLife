<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.simplelife.AirConditionerActivity"
    android:background="#ff39affe">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtnBack_air"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00000000" />

    <ImageButton
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:id="@+id/ibtnCircle_air"
        android:layout_alignTop="@+id/ibtnBack_air"
        android:layout_toRightOf="@+id/ibtnBack_air"
        android:layout_toEndOf="@+id/ibtnBack_air"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/circle_air"
        android:scaleType="fitCenter"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textName_air"
        android:layout_below="@+id/ibtnCircle_air"
        android:layout_alignLeft="@+id/ibtnCircle_air"
        android:layout_alignStart="@+id/ibtnCircle_air"
        android:layout_marginTop="5dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textContent_air"
        android:layout_alignTop="@+id/ibtnCircle_air"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/ibtnCircle_air"
        android:layout_alignBottom="@+id/textName_air"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/ibtnCircle_air"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLine_air"
        android:src="@drawable/line"
        android:layout_below="@+id/textName_air"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLine2_air"
        android:src="@drawable/line"
        android:layout_below="@+id/ibtnDown_air"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_air"
        android:layout_below="@+id/imageLine2_air"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="@null" />

    <ImageButton
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:id="@+id/ibtnUp_air"
        android:src="@drawable/icon_up_white"
        android:scaleType="fitCenter"
        android:layout_below="@+id/imageLine_air"
        android:layout_toRightOf="@+id/ibtnCircle_air"
        android:layout_toEndOf="@+id/ibtnCircle_air"
        android:layout_marginTop="5dp"
        android:background="#00000000" />

    <ImageButton
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:id="@+id/ibtnDown_air"
        android:src="@drawable/icon_down_white"
        android:scaleType="fitCenter"
        android:layout_below="@+id/ibtnUp_air"
        android:layout_alignLeft="@+id/ibtnUp_air"
        android:layout_alignStart="@+id/ibtnUp_air"
        android:background="#00000000"
        android:layout_marginTop="5dp" />

</RelativeLayout>
