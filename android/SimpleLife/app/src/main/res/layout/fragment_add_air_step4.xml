<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff39affe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ibtnBack_AddAir"
        android:layout_marginTop="28dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/ibtnBack_AddAir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:id="@+id/relativeLayout"
        android:background="@drawable/main_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/step_3of3"
            android:id="@+id/textStep4_addAir"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="-5dp"
            android:textSize="17dp"
            android:textColor="#ffffffff" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageIcon_addAir"
            android:layout_marginTop="65dp"
            android:src="@drawable/circle_air"
            android:layout_below="@+id/textStep4_addAir"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="@string/addmain_done"
            android:id="@+id/btnDone_addAir"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:background="#00000000"
            android:singleLine="true"
            android:textSize="23dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextName_addAir"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/addmain_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/addAir_step4"
            android:id="@+id/textContent4_addAir"
            android:layout_above="@+id/btnDone_addAir"
            android:layout_alignLeft="@+id/editTextName_addAir"
            android:layout_alignStart="@+id/editTextName_addAir"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffffff" />

    </RelativeLayout>
</LinearLayout>
