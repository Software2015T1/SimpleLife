<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff39affe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ibtnBack_AddTV"
        android:layout_marginTop="28dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/ibtnBack_AddTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:id="@+id/relativeLayout"
        android:background="@drawable/main_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/step_1of3"
            android:id="@+id/textStep1_addTV"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="-5dp"
            android:textSize="17dp"
            android:textColor="#ffffffff" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:id="@+id/ibtnNext_addTV1"
            android:src="@drawable/next_button"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/addIR_step1"
            android:id="@+id/textContent1_addtv"
            android:textColor="#ffffffff"
            android:layout_below="@+id/editTextID_addTV"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/addIR_connect"
            android:id="@+id/textConnect_addTV"
            android:layout_below="@+id/textStep1_addTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/addIR_HaveArduinoID"
            android:id="@+id/textHaveID_addTV"
            android:textColor="#ffffffff"
            android:layout_below="@+id/spinner_whichMain_addTV"
            android:layout_alignLeft="@+id/textWhichMain_addTV"
            android:layout_alignStart="@+id/textWhichMain_addTV" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_addTV"
            android:layout_below="@+id/textHaveID_addTV"
            android:layout_alignLeft="@+id/textHaveID_addTV"
            android:layout_alignStart="@+id/textHaveID_addTV"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/addIR_AddArduinoID"
            android:id="@+id/textAddID_addTV"
            android:layout_below="@+id/spinner_addTV"
            android:layout_alignLeft="@+id/spinner_addTV"
            android:layout_alignStart="@+id/spinner_addTV"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextID_addTV"
            android:layout_below="@+id/textAddID_addTV"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/textAddID_addTV"
            android:layout_alignStart="@+id/textAddID_addTV"
            android:layout_marginRight="20dp"
            android:hint="@string/addIR_TypeArduinoID" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/name_whichMain"
            android:id="@+id/textWhichMain_addTV"
            android:textColor="#ffffffff"
            android:layout_below="@+id/textConnect_addTV"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_whichMain_addTV"
            android:layout_below="@+id/textWhichMain_addTV"
            android:layout_alignRight="@+id/spinner_addTV"
            android:layout_alignEnd="@+id/spinner_addTV"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

    </RelativeLayout>
</LinearLayout>
