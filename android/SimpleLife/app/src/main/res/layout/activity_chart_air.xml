<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.simplelife.ChartAirActivity"
    android:background="#ff39affe">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtnBack_chartAir"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00000000"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/imageAirIcon_chart"
        android:src="@drawable/air_icon"
        android:layout_alignTop="@+id/textTitle_chartAir"
        android:layout_toLeftOf="@+id/textTitle_chartAir"
        android:layout_toStartOf="@+id/textTitle_chartAir"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/name_air"
        android:id="@+id/textTitle_chartAir"
        android:layout_alignTop="@+id/ibtnBack_chartAir"
        android:layout_alignLeft="@+id/textSubtitle_chartAir"
        android:layout_alignStart="@+id/textSubtitle_chartAir"
        android:textColor="#fff9cd05" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/name_usage"
        android:id="@+id/textSubtitle_chartAir"
        android:layout_below="@+id/textTitle_chartAir"
        android:layout_centerHorizontal="true"
        android:textColor="#ff546b7a" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textSubtitle_chartAir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:id="@+id/layout_chartAir"></LinearLayout>

</RelativeLayout>
