<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ibtnBack_AddAir"
        android:layout_marginTop="28dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/ibtnBack_AddAir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:id="@+id/relativeLayout"
        android:background="@drawable/main_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/step_3of5"
            android:id="@+id/textStep3_addmain"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="-5dp"
            android:textSize="20dp" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:id="@+id/ibtnNext_addmain3"
            android:src="@drawable/next_button"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageStep3_addmain"
            android:layout_below="@+id/textStep3_addmain"
            android:layout_alignLeft="@+id/textStep3_addmain"
            android:layout_alignStart="@+id/textStep3_addmain"
            android:layout_marginTop="48dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextID_addmain"
            android:layout_above="@+id/ibtnNext_addmain3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="164dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/addmain_id" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/addmain_step3"
            android:id="@+id/textContent3_addmain"
            android:layout_above="@+id/ibtnNext_addmain3"
            android:layout_alignLeft="@+id/editTextID_addmain"
            android:layout_alignStart="@+id/editTextID_addmain"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="20dp" />

    </RelativeLayout>
</LinearLayout>
