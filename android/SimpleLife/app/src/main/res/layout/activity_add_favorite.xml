<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.simplelife.AddFavoriteActivity"
    android:background="#ff39affe">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/name_add_favorite"
        android:id="@+id/textTitle_ideal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#fff9cd05" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ibtnBack_addfavorite"
        android:src="@drawable/cross_icon"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_alignBottom="@+id/textTitle_ideal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_addfavorite"
        android:layout_below="@+id/textTitle_ideal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:hint="@string/action_search" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expandableListView"
        android:layout_below="@+id/editText_addfavorite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:childDivider="@drawable/line_white"
        android:childIndicatorLeft="20dp"
        android:groupIndicator="@null"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:dividerHeight="1dp" />

</RelativeLayout>
